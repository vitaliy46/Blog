<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IDEACLOUDS.RU</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
        <a class="navbar-brand" href="#">
            @Html.ActionLink("IDEACLOUDS.RU", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto topmenu">
                <li>@Html.ActionLink("Домашняя страница", "Index", "Home")</li>
                <li>@Html.ActionLink("О программе", "About", "Home")</li>
                <li>@Html.ActionLink("Контакт", "Contact", "Home")</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>

    <div class="container body-content">

        <div class="row">

            <div class="col-xs-4 col-md-3">
                <span class="lead">Здесь будет добавлен контент позже</span>
            </div>

            <div class="col-xs-12 col-md-9">
                @RenderBody()
            </div>

        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

